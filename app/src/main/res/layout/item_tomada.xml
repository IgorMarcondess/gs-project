<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/nomeEquipamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomada Sala de estar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#344E41"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/voltagemEquipamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 Voltz"
            android:textSize="16sp"
            android:textColor="#344E41"
            app:layout_constraintTop_toBottomOf="@id/nomeEquipamento"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/codigoEquipamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CD3569"
            android:textSize="16sp"
            android:textColor="#344E41"
            app:layout_constraintTop_toBottomOf="@id/nomeEquipamento"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/excluirButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#344E41"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/voltagemEquipamento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/editarButton" />

        <Button
            android:id="@+id/editarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#344E41"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/voltagemEquipamento"
            app:layout_constraintStart_toEndOf="@id/excluirButton"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
