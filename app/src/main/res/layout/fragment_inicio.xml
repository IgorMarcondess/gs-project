<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="InicioFragment">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Inicio"
        android:textColor="#344E41"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cadastroButton"
        android:layout_width="348dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#F5F5F5"
        android:text="Cadastro de equipamento"
        android:textColor="#344E41"
        android:textSize="19sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:strokeColor="#344E41"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/historicoButton"
        android:layout_width="348dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F5F5F5"
        android:text="HistÃ³rico"
        android:textColor="#344E41"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastroButton"
        app:strokeColor="#344E41"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/equipamentoButton"
        android:layout_width="348dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F5F5F5"
        android:text="Equipamentos"
        android:textColor="#344E41"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/historicoButton"
        app:layout_constraintStart_toStartOf="@+id/historicoButton"
        app:layout_constraintTop_toBottomOf="@+id/historicoButton"
        app:strokeColor="#344E41"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
